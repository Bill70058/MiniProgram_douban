.item-navigator{
  width: 200rpx;
  margin-right: 20rpx; 
  display: inline-block;
}


.item-navigator .group-item{
  width: 100%;

}

.group-item .group-thumbnail{
  width: 100%;
  height: 284rpx;
  text-overflow: ellipsis;
  text-align: center;
}

.group-thumbnail .thumbnail{
  width: 100%;
  height: 100%;
}

.group-thumbnail .item-title{
  font-size: 28rpx;
  text-align: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  /* 对于超出的文本用省略号表示 */
  text-overflow: ellipsis;
  overflow: hidden;
  flex-wrap: nowrap;
  /**/
}