    <image src="{{item.pic.normal}}" class="thumbnail"></image>
  <view class="info-group">
    <view class="title">{{item.title}}</view>
    <view class="rate-year">{{item.rating.value}}åˆ†/{{item.year}}</view>
  </view>
  </view>
</view>
